{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "esnext",
    "jsx": "preserve",
    "noImplicitReturns": true,
    "sourceMap": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "pages/*": ["src/pages/*"],
      "components/*": ["src/components/*"],
      "services/*": ["src/services/*"],
      "constants/*": ["src/constants/*"],
      "static/*": ["src/static/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
